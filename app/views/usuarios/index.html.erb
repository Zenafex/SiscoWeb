<div class="container-md">

<h1>Listado de Usuarios</h1>
<table>
  <tr>
    <thead>
      <th>Tipo de persona</th>
      <th>Documento</th>
      <th>Fecha de emisión</th>
      <th>Fecha de vencimiento</th>
      <th>Nombre</th>
      <th>Correo</th>
      <th>Telefono principal</th>
      <th>Telefono secundario</th>
    </thead>
  </tr>
    <% @usuarios.each do |usuario| %>
  <tr>
    <td><%= usuario.tipo_persona%></td>
    <td><%= usuario.documento%></td>
    <td><%= usuario.fecha_emision_doc%></td>
    <td><%= usuario.fecha_venc_doc%></td>
    <td><%= usuario.nombre%></td>
    <td><%= usuario.correo%></td>
    <td><%= usuario.telefono_principal%></td>
    <td><%= usuario.telefono_secundario%></td>
    <td>
        <%= link_to "Editar", editar_usuario_path(usuario) %>
        <%= link_to "Eliminar", usuario, method: :delete, data: { confirm: "Deseas eliminar este artículo?"} %>
    </td>
  </tr>
    <% end %>
</table>
</div>
